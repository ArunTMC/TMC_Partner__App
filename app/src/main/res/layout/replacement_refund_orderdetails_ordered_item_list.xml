<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <CheckBox
                android:id="@+id/marker_checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/checkbox_linearLayout"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>



        <TextView
            android:id="@+id/itemName_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"

            android:textSize="13sp"
            android:text="ItemName" />


        <TextView
            android:id="@+id/itemWeight_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingStart="5dp"

            android:text="Weight" />

        <TextView
            android:id="@+id/itemQty_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:gravity="center"

            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"

            android:textSize="13sp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/itemGst_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"

            android:textSize="13sp"
            android:paddingStart="5dp"
            android:text="GST" />

        <TextView
            android:id="@+id/itemSubtotal_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"

            android:textSize="13sp"
            android:text="Subtotal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/selecteditemParentLayout"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="55dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>



        <TextView
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"

            android:textSize="11sp"
            android:text="Selected Quantity Details" />


        <TextView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingStart="5dp"

            android:text="Weight" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:gravity="center"
            android:id="@+id/selectedItemQuantityTextWidget"

            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/TMC_Orange"

            android:textSize="13sp"
            android:text="Quantity" />

        <TextView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Orange"
            android:gravity="center"

            android:textSize="13sp"
            android:paddingStart="5dp"
            android:text="GST" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Orange"
            android:gravity="center"
            android:id="@+id/selectedItemPriceTextWidget"
            android:textSize="13sp"
            android:text="Subtotal" />
    </LinearLayout>
</LinearLayout>