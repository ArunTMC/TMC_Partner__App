<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mobilescreen_javaclasses.replacement_refund_classes.AddReplacement_Refund_OrdersScreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/TMC_White"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:id="@+id/headingTextview"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/open_sans_bold"
        android:background="@color/TMC_Orange"
        android:text="Replace/Refund OrderDetails Screen" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="50dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"

                android:layout_marginBottom="5dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:visibility="gone"
                    android:text="Default Values : "
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Orderid"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/orderid_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="03846258402722"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.9"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Order Type"

                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/ordertype_text_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Slot Name"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/slotname_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Slot Date"

                            android:textAlignment="center"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/slotdate_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""

                            android:textAlignment="center"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Delivery Type"
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/delivertype_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Payable Mode"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/payablemode_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Payable Amount"

                            android:textAlignment="center"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/payableAmount_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="center"

                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Discount Amt"
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/discount_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TMC_White"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/border_line" />

                <TextView
                    android:id="@+id/item_price_headingtext"
                    android:layout_width="wrap_content"
                    android:background="@color/TMC_White"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold_italic"
                    android:textSize="14sp"
                    android:textColor="@color/TMC_Black"
                    android:text=" Ordered Item List  " />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="ItemName"
                    android:gravity="center"
                    android:textColor="@color/TMC_Orange"
                    android:layout_marginStart="45dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Weight"
                    android:textColor="@color/TMC_Orange"
                    android:gravity="center"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="Qty"
                    android:textColor="@color/TMC_Orange"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="GST"
                    android:textColor="@color/TMC_Orange"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Total"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/TMC_Orange"
                    android:gravity="right"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"

                android:background="@mipmap/black_line" />

            <ListView
                android:id="@+id/orderidItemListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="1dp"
                android:visibility="visible"
                android:layout_marginEnd="1dp"

                android:background="@mipmap/black_line" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="25dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/make_replacement_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Make Replacement"
                android:layout_marginEnd="10dp"
                android:textColor="@color/TMC_White"
                android:layout_weight="1"
                android:background="@drawable/orange_selected_button_background"
                android:visibility="visible" />
            <Button
                android:id="@+id/make_refund_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Make Refund"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/orange_non_selected_button_background"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/loadingpanelmask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TMC_proressbar_mask_Color"
            android:alpha="0.85"

            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loadinganim_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_gravity="center"
                app:indicatorColor="@color/TMC_Orange"
                app:indicatorName="BallPulseIndicator" />
        </LinearLayout>



    </RelativeLayout>



</LinearLayout>