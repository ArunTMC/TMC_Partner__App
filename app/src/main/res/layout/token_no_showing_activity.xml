<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings.TokenNoShowingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/TMC_White"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/open_sans_bold"
        android:background="@color/TMC_Orange"
        android:text="@string/OrderedMenuItemDetails" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:visibility="gone"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="Item Name : " />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Orange"
            android:textSize="20dp"
            android:layout_marginTop="5dp"

            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="ffffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:visibility="gone"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="Total No.of.Packs : " />
        <TextView
            android:id="@+id/ordercount"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="ccc" />



        <TextView
            android:id="@+id/itemquantity"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"

            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="nnnn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:visibility="gone"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="Total No.of.Orders /Tokens : " />

        <TextView
            android:id="@+id/ordercount1"
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="20dp"
            android:visibility="gone"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@drawable/border_line" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/TMC_Primary_Text_Color"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:visibility="gone"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_height="wrap_content"
        android:text="Token No's  -  No.of.Packs" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/border_line" />


    <ListView
        android:id="@+id/tokennoListview"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:textAlignment="center"
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/recyclerView"

        />
</LinearLayout>