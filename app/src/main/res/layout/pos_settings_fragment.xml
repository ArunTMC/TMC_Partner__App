                         android:background="@mipmap/thick_border_line_seperator"
                         />

                 </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:id="@+id/GeneralConfiguration_linearLayout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="General"

                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"

                    android:background="@drawable/border_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/mobilePrinterConnectLayout"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Printer Status : "
                        android:layout_weight=".1"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="....Loading.... "
                        android:layout_weight="1"
                        android:id="@+id/printerConnectionStatus_Textwidget"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans_semibold"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/connect_printer_button_widget"
                        android:text="Connect"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"

                        android:background="@drawable/button_background"
                        android:textColor="@color/TMC_White"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/Vendor_Name"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textSize="16sp"
                        android:id="@+id/storeName"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:fontFamily="@font/open_sans_semibold"

                        />
                </LinearLayout>

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/Mobile_Number"
                        android:textSize="16sp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:fontFamily="@font/open_sans_semibold"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="+919948859549"
                        android:textSize="16sp"
                        android:id="@+id/userMobileNo"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:fontFamily="@font/open_sans_semibold"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:id="@+id/resetTokenNoLayout"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"

                        android:text="@string/Current_token_no"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/resetTokenNO_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"

                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="16sp"

                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/resetTokenNoButton"
                        android:text="@string/Reset_token_no"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"

                        android:background="@drawable/button_background"
                        android:textColor="@color/TMC_White"

                        />
                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Version_No"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/login_as_another_vendor"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/LogInAsAnotherVendor"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/logout"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/LogOut"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

</ScrollView>












    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_proressbar_mask_Color"
        android:alpha="0.85"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:layout_gravity="center"
            app:indicatorColor="@color/TMC_Orange"
            app:indicatorName="BallPulseIndicator" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbarInstruction"
            android:text="Loading"
            android:textColor="@color/TMC_Orange"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>
