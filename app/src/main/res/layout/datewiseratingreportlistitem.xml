<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/ratingCardView"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="@color/TMC_Orange"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Created Time :" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="11dp"
            android:id="@+id/createdTimetextview"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="14sp"
            android:layout_marginStart="26dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Thu, 3 Aug 2021 15:89:90" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"

            android:layout_height="wrap_content"
            android:text="Orderid :" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderIdtextview"
            android:paddingStart="10dp"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="14sp"
            android:layout_marginStart="74dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="16839300102882" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"

            android:text="Mobile Number :" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobileNumbertextview"
            android:paddingStart="10dp"
            android:textColor="@color/TMC_Orange"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="+919597580128" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"

            android:text="Item Details :" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemDetailsTextview"
            android:paddingStart="10dp"
            android:layout_marginTop="6dp"

            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/open_sans_bold"

            android:text="  " />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"

            android:text="Feed Back :" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedBackTextview"
            android:paddingStart="10dp"
            android:textColor="@color/TMC_Orange"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="10dp"

            android:text="weight not as per the App.... itâ€™s lower by more than 100gms of the min value" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_bold"

            android:text="Quality Rating" />




        <RatingBar
            android:id="@+id/qualityratingBar"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:rating="0"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_height="wrap_content" />


    </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="70dp"
            android:background="@drawable/vertical_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans_bold"

                android:text="Delivery  Rating" />




            <RatingBar
                android:id="@+id/deliveryratingBar"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="0"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>

        <Button


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Raise a Ticket"
            android:textAllCaps="false"
            android:visibility="gone"
            android:id="@+id/addEnquiryStatusButton"
            android:textColor="@color/TMC_White"

            android:textSize="17sp" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>