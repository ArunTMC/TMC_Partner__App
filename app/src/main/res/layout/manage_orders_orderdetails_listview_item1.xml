<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemName_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"

            android:textSize="19sp"
            android:text="ItemName" />

        <TextView
            android:id="@+id/itemWeight_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"

            android:textSize="19sp"
            android:paddingStart="5dp"

            android:text="Weight" />

        <TextView
            android:id="@+id/itemQty_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:paddingStart="35dp"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"

            android:textSize="19sp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/itemGst_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:gravity="left"
            android:textSize="19sp"  android:paddingStart="5dp"
            android:text="GST" />

        <TextView
            android:id="@+id/itemSubtotal_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/TMC_Primary_Text_Color"

            android:textSize="19sp"
            android:text="Subtotal" />
    </LinearLayout>

</LinearLayout>