<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings.CreditOrders_MobileNumberwiseTransactionScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="clip_vertical"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/TMC_Orange"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Credit Orders Payment Transaction List"
            android:textColor="@color/TMC_White"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Total Value for the Orders given as Credit"
            android:textColor="@color/TMC_Black"/>
        <TextView
            android:id="@+id/totalCreditAmount_textWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:gravity="end"
            android:layout_weight="2"
            android:textColor="@color/TMC_Orange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Total Credit Amount Paid back till now"
            android:textColor="@color/TMC_Black"/>
        <TextView
            android:id="@+id/totalCreditAmountPaidback_textWidget"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:gravity="end"
            android:layout_weight="2"
            android:textColor="@color/TMC_Orange"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/border_line" />
<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/creditTransactionListView"/>
</LinearLayout>