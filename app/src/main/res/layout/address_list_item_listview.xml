<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/TMC_Grey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/selectAddress_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/TMC_Hint_Color"
                    android:layout_alignStart="@+id/selectAddress_checkbox"
                    android:text="Click to Select the Address"/>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Customer Name :"
                        />

                    <TextView
                        android:id="@+id/contactPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Black"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"

                        android:text=" - " />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="right"
                        android:text="Customer Mobile No :" />

                    <TextView
                        android:id="@+id/contactPersonMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Black"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="right"

                        android:text=" - " />
                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address : " />

                    <TextView
                        android:id="@+id/addresstext"
                        android:textColor="@color/TMC_Black"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address Type" />

                    <TextView
                        android:id="@+id/address_type"
                        android:textColor="@color/TMC_Black"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - " />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp"
                        android:gravity="right"

                        android:fontFamily="@font/open_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Distance" />

                    <TextView
                        android:id="@+id/delivery_distance_in_km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:gravity="right"

                        android:textColor="@color/TMC_Black"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"

                        />
                </LinearLayout>





            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectAddress_checkboxLayout"
            android:orientation="horizontal">
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>