<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/printAgain"
        android:textColor="@color/TMC_Primary_Text_Color"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <Button
        android:id="@+id/printAgain"
        android:layout_width="450dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:background="@drawable/orange_selected_button_background"
        android:textColor="@color/TMC_White"
        android:text="Poor Internet Connection ." />


</androidx.constraintlayout.widget.ConstraintLayout>