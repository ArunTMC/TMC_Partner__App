<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Settings.SlotwiseAppOrderslist">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/TMC_White"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/open_sans_bold"
        android:background="@color/TMC_Orange"
        android:text="@string/slotAppOrdersList" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        android:orientation="vertical">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dateSelectorLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Date"
                    android:gravity="center_vertical"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/dateSelector_text"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="13dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="10 Jan 2021"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="16sp" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:visibility="gone"
                android:id="@+id/generateReport_Layout"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/TMC_Orange"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:text="Generate Report" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/PrintReport_Layout"
                android:layout_width="60dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    app:srcCompat="@mipmap/printer" />

            </LinearLayout>
        </LinearLayout>













        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/border_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:layout_marginStart="13dp"

                android:text="Slot time : " />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_marginStart="75dp"

                android:id="@+id/SlotrangeSelector_spinner"
                android:layout_height="match_parent"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/border_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="16sp"

                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"

                android:text="No.of orders  :-  " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/TMC_Orange"
                android:textSize="16sp"
                android:id="@+id/appOrdersCount_textwidget"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="left|center"

                android:text="0" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
            android:layout_weight="1"

            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="16sp"

                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="10dp"

                android:text="No.of.Packs  :-  " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/TMC_Orange"
                android:textSize="16sp"
                android:id="@+id/appOrdersPacksCount_textwidget"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="left|center"

                android:text="0" />


        </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/border_line" />









                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/posSalesReport_Listview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/TMC_White"
                            android:dividerHeight="0dp"
                            android:isScrollContainer="false"
                            android:nestedScrollingEnabled="false"
                            android:scrollIndicators="none"
                            android:scrollbars="none"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/listviewInstruction_textview"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="Select Date to Generate Data"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:gravity="center"/>

                    </RelativeLayout>

                </LinearLayout>



    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/loadingpanelmask_dailyItemWisereport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TMC_proressbar_mask_Color"
    android:alpha="0.85"

    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:visibility="gone" />


<LinearLayout
    android:id="@+id/loadingPanel_dailyItemWisereport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loadinganim_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        android:layout_gravity="center"
        app:indicatorColor="@color/TMC_Orange"
        app:indicatorName="BallPulseIndicator" />
</LinearLayout>

</RelativeLayout>

