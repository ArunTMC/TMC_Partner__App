<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/Mobile_Number" />

                <TextView
                    android:id="@+id/usermobileno_textwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:textSize="18dp"
                    android:paddingStart="20dp"

                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:text="+91" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/total_No_of_Points_user_have" />

                <TextView
                    android:id="@+id/totalNoofPoints_textwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:textSize="18dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:text="0Points" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/total_No_of_Points_user_redeemed_already" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:paddingStart="20dp"

                        android:id="@+id/points_user_already_redeemed"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textColorHint="@color/TMC_Hint_Color"
                        android:hint="000"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/No_of_Points_user_can_redeem" />

                <TextView
                    android:id="@+id/points_you_can_redeemToday_textwidget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="20dp"

                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:text="0Points" />
                <TextView
                    android:id="@+id/total_noof_points_allowedPerDay_textWidget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Secondary_Text_Color"

                    android:text="50Pointsallowed/day" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:id="@+id/enterpointsLayout"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/enter_the_points_user_needs_to_redeem" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"

                    android:orientation="horizontal">
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/points_to_redeem_edittext"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textColorHint="@color/TMC_Hint_Color"
                    android:hint="40"
                    android:digits="0123456789"
                    android:layout_marginStart="20dp"
                    android:inputType="phone"
                    android:text="" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_weight="1"

                android:gravity="left"
                android:orientation="horizontal">

                   <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="10dp"
                       android:id="@+id/applyRedeemPoints"
                    android:textAllCaps="false"
                    android:textColor="@color/TMC_White"
                    android:background="@drawable/orange_selected_button_background"
                    android:text="Apply Redeem Points" />
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/border_line" />

 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/billDetailsLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="20dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/Bill_Details" />


            </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="6dp"
         android:orientation="horizontal">


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/TMC_Primary_Text_Color"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_bold"
             android:text="Total Bill Amount" />

         <TextView
             android:id="@+id/totalbillAmount_textwidget"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1.3"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_semibold"
             android:textColor="@color/TMC_Primary_Text_Color"

             android:text="000" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="6dp"
         android:orientation="horizontal">


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/TMC_Primary_Text_Color"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_bold"
             android:text="Redeemed Points" />

         <TextView
             android:id="@+id/redeemedpoints_textwidget"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1.3"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_semibold"
             android:textColor="@color/TMC_Orange"

             android:text="0Points" />
     </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="6dp"
         android:orientation="horizontal">


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/TMC_Primary_Text_Color"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_bold"
             android:text="Final Amount to Pay" />

         <TextView
             android:id="@+id/finalAmounttopay_textwidget"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1.3"
             android:textSize="18dp"
             android:fontFamily="@font/open_sans_semibold"
             android:textColor="@color/TMC_Primary_Text_Color"

             android:text="0" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight=".6"
             android:orientation="horizontal">
         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:padding="6dp"
             android:layout_weight="1"

             android:gravity="left"
             android:orientation="horizontal">

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="18dp"
                 android:padding="10dp"
                 android:id="@+id/proceedtoCheckoutWidget"

                 android:textAllCaps="false"
                 android:textColor="@color/TMC_White"
                 android:background="@drawable/normal_state_button_background"
                 android:text="Proceed to Checkout" />
         </LinearLayout>
     </LinearLayout>

 </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/loadingpanelmask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.85"
            android:background="@color/TMC_proressbar_mask_Color"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loadinganim_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:indicatorColor="@color/TMC_Orange"
                app:indicatorName="BallPulseIndicator" />
        </LinearLayout>
    </RelativeLayout>

    </ScrollView>
</LinearLayout>