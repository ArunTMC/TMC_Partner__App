<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/firstLayout"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Mobile_Number"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/usermobileno_textwidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingStart="20dp"

                        android:text="+91"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:textSize="18dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/total_No_of_Points_user_have"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/totalNoofPoints_textwidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingStart="20dp"
                        android:text="0Points"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/total_No_of_Points_user_redeemed_already"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/points_user_already_redeemed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"

                            android:hint="000"
                            android:paddingStart="20dp"
                            android:text=""
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textColorHint="@color/TMC_Hint_Color"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/No_of_Points_user_can_redeem"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/points_you_can_redeemToday_textwidget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"

                        android:paddingStart="20dp"
                        android:text="0Points"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/total_noof_points_allowedPerDay_textWidget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="50Pointsallowed/day"
                        android:textColor="@color/TMC_Secondary_Text_Color"

                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/enterpointsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/enter_the_points_user_needs_to_redeem"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"

                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/points_to_redeem_edittext"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:digits="0123456789"
                            android:fontFamily="@font/open_sans_semibold"
                            android:hint="40"
                            android:inputType="phone"
                            android:text=""
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textColorHint="@color/TMC_Hint_Color"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"

                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/applyRedeemPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/orange_selected_button_background"
                            android:padding="10dp"
                            android:text="Apply Redeem Points"
                            android:textAllCaps="false"
                            android:textColor="@color/TMC_White"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_below="@+id/firstLayout"
                android:background="@drawable/border_line" />

            <LinearLayout
                android:id="@+id/billDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Bill_Details"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Total Bill Amount"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/totalbillAmount_textwidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="000"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Redeemed Points"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/redeemedpoints_textwidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0Points"
                        android:textColor="@color/TMC_Orange"

                        android:textSize="18dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Final Amount to Pay"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/finalAmounttopay_textwidget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"

                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/proceedtoCheckoutWidget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/normal_state_button_background"
                            android:padding="10dp"

                            android:text="Proceed to Checkout"
                            android:textAllCaps="false"
                            android:textColor="@color/TMC_White"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadingpanelmask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:alpha="0.85"
                android:background="@color/TMC_proressbar_mask_Color"
                android:orientation="vertical"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/loadingPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/loadinganim_layout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:indicatorColor="@color/TMC_Orange"
                    app:indicatorName="BallPulseIndicator" />
            </LinearLayout>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>