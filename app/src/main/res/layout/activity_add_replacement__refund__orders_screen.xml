<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mobilescreen_javaclasses.replacement_refund_classes.AddReplacement_Refund_OrdersScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="clip_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/TMC_Orange"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Replace / Refund OrderDetails Screen"
                android:textColor="@color/TMC_White"
                android:textSize="17sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"

                android:layout_marginBottom="5dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Default Values : "
                    android:textSize="11sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Orderid"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/orderid_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text=""
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"


                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="User Mobile No"
                            android:textAlignment="center"

                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/usermobileno_textview_widget"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Status"

                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/status_text_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Order Placed Date"

                            android:textAlignment="textStart"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/orderplaceddate_textview_widget"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""

                            android:textAlignment="textStart"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Marked Date"

                            android:textAlignment="center"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/markeddate_textview_widget"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Total Amt User got"

                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/totalAmtUserGot_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="textEnd"

                            android:textAllCaps="false"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Replaced Amt"

                            android:textAlignment="textStart"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/replacementorderAmount_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="textStart"

                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Refunded Amt"

                            android:textAlignment="center"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/refundorder_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="center"

                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Balance Amt"
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Orange"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/balanceorder_textview_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/open_sans"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/TMC_Primary_Text_Color"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TMC_White"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TMC_White"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line" />

            <TextView
                android:id="@+id/ordered_item_headingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/TMC_White"
                android:fontFamily="@font/open_sans_bold_italic"
                android:text=" Marked Item List  "
                android:textColor="@color/TMC_Black"
                android:textSize="16sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="5dp"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="3.5"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="ItemName"
                android:textColor="@color/TMC_Orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Weight"
                android:textColor="@color/TMC_Orange"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Qty"
                android:textColor="@color/TMC_Orange"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="GST"
                android:textColor="@color/TMC_Orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight=".6"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="right"
                android:text="Total"
                android:textColor="@color/TMC_Orange"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"

            android:background="@mipmap/black_line" />

        <ListView
            android:id="@+id/orderidItemListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/refundParentLayout"
                android:padding="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/border_line" />

                <TextView
                    android:id="@+id/refund_headingtext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@color/TMC_White"
                    android:fontFamily="@font/open_sans_bold_italic"
                    android:text="Add Refund Amount"
                    android:textColor="@color/TMC_Black"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:paddingEnd="20dp"
                    android:paddingStart="15dp"

                    android:text="Enter Amount to be Refunded"
                    android:textColor="@color/TMC_Orange"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/refundAmt_editwidget"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pale_orange_background"
                        android:digits="0123456789"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_vertical"
                        android:hint="100"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:focusedByDefault="false"

                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textColorHint="@color/TMC_Hint_Color"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/addRefund_buttonWidget"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:text="Add Refund"
                        android:layout_weight="2"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"

                        android:layout_marginEnd="15dp"
                        android:textColor="@color/TMC_White"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reason_for_replacement_Layout"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Orange"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="1dp"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/open_sans"
                        android:text="Reason For Refund "
                        />


                    <EditText
                        android:id="@+id/reason_replacementtextview_Widget"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:hint="Enter the reason"
                        android:ems="10"
                        android:padding="3dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/orange_non_selected_button_background"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="right|center"
                    android:orientation="horizontal">



                </LinearLayout>



            </LinearLayout>

            <View
                android:id="@+id/dividedr"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="17dp"
                android:visibility="gone"
                android:background="@drawable/border_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/replacementParentLayout"
                android:padding="1dp">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line" />

            <TextView
                android:id="@+id/item_price_headingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/TMC_White"
                android:fontFamily="@font/open_sans_bold_italic"
                android:text="Add New Orders as Replacement"
                android:textColor="@color/TMC_Black"
                android:textSize="16sp" />


        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/Item_Total"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mobile_ItemTotal_textwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textPersonName"
                    android:text="990.00"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="6dp"
                    android:text="G.S.T"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mobile_GST_textwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textPersonName"
                    android:text="0.00"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/To_Pay"
                    android:textColor="@color/TMC_Primary_Text_Color"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mobile_ToPay_textwidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginStart="17dp"
                    android:text="990.00 "
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mobile_checkout_button"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/Check_out"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:background="@drawable/orange_non_selected_button_background"
                    android:textSize="13sp" />


            </LinearLayout>


        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"

            android:background="@drawable/border_line"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newOrders_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">


        </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>


        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/loadingpanelmask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.85"
        android:background="@color/TMC_proressbar_mask_Color"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadinganim_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:indicatorColor="@color/TMC_Orange"
            app:indicatorName="BallPulseIndicator" />
    </LinearLayout>


</RelativeLayout>