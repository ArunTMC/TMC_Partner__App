                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:textSize="15sp"

                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="6dp"
                    android:text="POS Order"
                    android:textAlignment="viewEnd" />
