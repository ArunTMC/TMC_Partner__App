<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PosScreen_JavaClasses.NewOrders.Pos_New_Order_Cart_Item_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="22sp"
                android:layout_weight="1"
                android:text="Name of the Item" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="22sp"
                android:gravity="center"
                android:text="Weight in Grams" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="22sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="45dp"

                android:text="Price" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/blackline" />
        <ListView
            android:id="@+id/newOrders_Cart_ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#EEEEEE"
            android:dividerHeight="1dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollIndicators="none"
            android:scrollbars="none"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="vertical">
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"

            android:background="@mipmap/verticalline" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"

            android:orientation="horizontal"
            tools:ignore="NestedWeights">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"

            android:orientation="vertical"
            tools:ignore="NestedWeights">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="28sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:text="@string/Bill_Details" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/open_sans_light"
                android:layout_height="wrap_content"
                android:text="@string/Item_Total" />





            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/open_sans_light"
                android:layout_height="wrap_content"
                android:text="@string/Taxes_and_charges" />




            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_light"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/To_Pay" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"

            android:orientation="vertical"
            tools:ignore="NestedWeights">


            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="28sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_height="30dp"
                android:text="" />

            <TextView
                android:id="@+id/item_total_text_widgettt"

                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="300.00" />





            <TextView
                android:id="@+id/taxes_and_charges_text_widget"

                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_height="wrap_content"
                android:gravity="right"

                android:text="25.00" />




            <TextView
                android:id="@+id/to_pay_text_widget"
                android:layout_width="match_parent"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="right"

                android:text="325.00" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"

                android:orientation="vertical"
                tools:ignore="NestedWeights">

            <Button
                android:id="@+id/procced_to_pay_widget"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:text="@string/Check_out"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_background"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/TMC_White"
                />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</LinearLayout>