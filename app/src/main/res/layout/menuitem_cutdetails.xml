<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="30dp"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginBottom="7dp"

                        android:paddingEnd="30dp"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/isdefault_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Default" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="7dp"
                        android:id="@+id/isDefaultCheckboxLayout"

                        android:paddingEnd="30dp"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">




                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:id="@+id/edit_cutdetails_layout"
                    android:background="@drawable/orange_non_selected_button_background"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/itemweightcutediticon" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginEnd="7dp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:text="Edit this Weight Details" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="Cut Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:id="@+id/cutname_textview_widget"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="Cut Description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:id="@+id/cutDesc_textview_widget"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="Gross Weight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:id="@+id/grossweight_text_widget"

                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="00000g" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="Net Weight" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:id="@+id/netweight_textview_widget"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="0000g to 0000g" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.3"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="15sp"
                    android:text="Portion Size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:gravity="end"
                    android:id="@+id/portionsize_textview_widget"
                    android:textSize="15sp"
                    android:text="1pcs" />

            </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addNewCutItemtoArrayButton"
    android:visibility="gone"
    android:text="Add This to Additional Cut Details"
    android:background="@drawable/button_background"
    android:textColor="@color/TMC_White"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>