<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMCPartnerApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>

        <item name="colorPrimary">@color/TMC_Orange</item>
        <item name="colorPrimaryDark">@color/TMC_Primary_Text_Color</item>
        <item name="colorAccent">@color/TMC_Orange_border</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/TMC_Primary_Text_Color</item>
        <item name="colorAccent">@color/TMC_Orange</item>
        <item name="android:textColorSecondary">@color/TMC_Primary_Text_Color</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>